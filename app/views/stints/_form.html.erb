<%= simple_form_for([@stint.artist, @stint]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :band %>
      <div class="form-group">
        <%= f.label :start_date, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= render partial: 'shared/date_select_field', locals: {f: f, field_name: :start_date} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :end_date, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= render partial: 'shared/date_select_field', locals: {f: f, field_name: :end_date} %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
<% end %>

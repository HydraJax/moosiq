<div class="page-header">
  <%= link_to new_stint_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Stint
  <% end %>
  <h1>Listing stints</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Band</th>
            <th>Artist</th>
            <th>Start date</th>
            <th>End date</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @stints) do |stint| %>
            <td><%= stint.band %></td>
            <td><%= stint.artist %></td>
            <td><%= stint.start_date %></td>
            <td><%= stint.end_date %></td>
            <td><%= link_to 'Show', stint %></td>
        <td><%= link_to 'Edit', edit_stint_path(stint) %></td>
        <td><%= link_to 'Destroy', stint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

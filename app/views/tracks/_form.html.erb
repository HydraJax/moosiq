<%= form_for(@track, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @track.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@track.errors.count, "error") %> prohibited this track from being saved:</h4>

      <ul>
      <% @track.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Runtime in Seconds', :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :seconds, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :released_on, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= render partial: 'shared/date_select_field', locals: { f: f, field_name: :released_on }%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :band, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.collection_select :band_id, Band.order(:name), :id, :name, {}, :class => "form-control" %>
      <%= f.text_field :band_name, data: {autocomplete_source: Band.order(:name).map(&:name)} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

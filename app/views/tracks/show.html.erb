<div class="page-header">
  <%= link_to tracks_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_track_path(@track), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @track.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Runtime:</dt>
  <dd><%= distance_of_time_in_words( @track.seconds, 0, {include_seconds: true} )%></dd>

  <dt>Released on:</dt>
  <dd><%= @track.released_on %></dd>

  <dt>Band:</dt>
  <dd><%= link_to @track.band.name, @track.band if @track.band %></dd>

</dl>

<h3>Featured On</h3>
<ul>
  <%= render @track.albums %>
</ul>

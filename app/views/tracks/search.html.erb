<div class="page-header">
  <%= link_to new_track_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Track
  <% end %>
  <h1>Tracks Released</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Released on</th>
      <th>Band</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @tracks) do |track| %>
        <td><%= link_to track.title, track %></td>
        <td><%= track.released_on %></td>
        <td><%= (link_to track.band.name, track.band) if track.band %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
    </tbody>
  </table>
</div>
